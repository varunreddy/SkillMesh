{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/skill-registry-rag/schema.json",
  "title": "Skill Registry",
  "type": "object",
  "anyOf": [
    {"required": ["tools"]},
    {"required": ["roles"]}
  ],
  "properties": {
    "registry_name": {"type": "string"},
    "version": {"type": "string"},
    "updated_at": {"type": "string"},
    "tools": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "domain", "instruction_file"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "title": {"type": "string", "minLength": 1},
          "domain": {"type": "string", "minLength": 1},
          "instruction_file": {"type": "string", "minLength": 1},
          "description": {"type": "string"},
          "tags": {"type": "array", "items": {"type": "string"}},
          "tool_hints": {"type": "array", "items": {"type": "string"}},
          "examples": {"type": "array", "items": {"type": "string"}},
          "aliases": {"type": "array", "items": {"type": "string"}},
          "dependencies": {"type": "array", "items": {"type": "string"}},
          "output_artifacts": {"type": "array", "items": {"type": "string"}},
          "quality_checks": {"type": "array", "items": {"type": "string"}},
          "constraints": {"type": "array", "items": {"type": "string"}},
          "input_contract": {
            "type": "object",
            "additionalProperties": {"type": "string"}
          },
          "risk_level": {"type": "string", "enum": ["", "low", "medium", "high"]},
          "maturity": {"type": "string", "enum": ["", "alpha", "beta", "stable", "deprecated"]},
          "metadata": {"type": "object"}
        },
        "additionalProperties": true
      }
    },
    "roles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "domain", "instruction_file"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "title": {"type": "string", "minLength": 1},
          "domain": {"type": "string", "minLength": 1},
          "instruction_file": {"type": "string", "minLength": 1},
          "description": {"type": "string"},
          "tags": {"type": "array", "items": {"type": "string"}},
          "tool_hints": {"type": "array", "items": {"type": "string"}},
          "examples": {"type": "array", "items": {"type": "string"}},
          "aliases": {"type": "array", "items": {"type": "string"}},
          "dependencies": {"type": "array", "items": {"type": "string"}},
          "output_artifacts": {"type": "array", "items": {"type": "string"}},
          "quality_checks": {"type": "array", "items": {"type": "string"}},
          "constraints": {"type": "array", "items": {"type": "string"}},
          "input_contract": {
            "type": "object",
            "additionalProperties": {"type": "string"}
          },
          "risk_level": {"type": "string", "enum": ["", "low", "medium", "high"]},
          "maturity": {"type": "string", "enum": ["", "alpha", "beta", "stable", "deprecated"]},
          "metadata": {"type": "object"}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
